<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.opengl4.android.MenuActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esfera"
        android:textSize="25dp"
        android:onClick="crearCuadrica"
        android:id="@+id/buttonEsfera"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Totoroide"
        android:textSize="25dp"
        android:onClick="crearCuadrica"
        android:id="@+id/buttonToroide"
        android:layout_below="@+id/buttonEsfera"
        android:layout_marginTop="70dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supercuádrica"
        android:textSize="25dp"
        android:onClick="crearCuadrica"
        android:id="@+id/buttonSuper"
        android:layout_below="@+id/buttonToroide"
        android:layout_marginTop="70dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
